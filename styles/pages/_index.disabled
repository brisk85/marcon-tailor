
.page__index{
  padding-top:100vh;
  background:$brand-blue-dark;




  &__intro{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100vh;
    background:$brand-blue-dark;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index:200;
    transition:opacity 1s ease;

    &[data-visible="false"] {
      display: none;
    }
    &[data-faded="true"] {
      opacity:0;
    }

    .bm-container{
      width:100vw;
      height:100vh;

      @media #{$screen-md-min} {
        width:50vw;
        height:50vh;
      }
    }
  }









  &__cover{
    position: fixed;
    top:0;
    left:0;
    width:100%;
    height:100vh;
    color:white;
    z-index:0;
    display: flex;
    align-items: center;
    justify-content: center;

    h1{
      margin:-50px 0 0 0;
      max-width:350px;
      text-align:center;

      @media #{$screen-sm-min} {
        max-width:none;
        margin:0;
      }
    }

    video{
      position: absolute;
      top:50%;
      left:50%;
      transform: translate3d(-50%,-50%,0);
      opacity:0.8;
      z-index:-1;

      @media (min-aspect-ratio:16/9) {
        width:100%;
        height:auto;
      }

      @media (max-aspect-ratio:16/9) {
        width:auto;
        height:100%;
      }
    }

