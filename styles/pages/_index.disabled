    .icon-scroll {
      width:50px;
      height:50px;
      position: absolute;
      left:calc( 50% - 25px );
      bottom:calc(70px + 1.5rem);
      animation: bounce 2s infinite;

      @media #{$screen-md-min} {
        bottom:1rem;
      }

      line{
        stroke:white;
      }

      @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
          transform: translateY(0) scale(0.7);
        }
        40% {
          transform: translateY(-30px) scale(0.7);
        }
        60% {
          transform: translateY(-15px) scale(0.7);
        }
      }
    }
  }






  &__gallery{
    color:white;
    padding:5rem 0 0 0;
    width:100%;
    overflow:hidden;
    z-index:1;
    position: relative;

    @media #{$screen-sm-min} {
      padding-top:10rem;
    }

    .full-width-grid{
      display: grid;
      grid-template-columns:1fr;
      grid-gap:1.5rem;
      padding:0 5%;

      @media #{$screen-sm-min} {
        grid-template-columns: 1fr 1fr 1fr;
        grid-gap:2rem;
        padding:0 2rem;
      }
    }

